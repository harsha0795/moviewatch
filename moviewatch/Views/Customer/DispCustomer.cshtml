
@{
    ViewBag.Title = "DispCustomer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<table class="table table-striped table-condensed table-hover cf">
    <thead>
        <tr>
            <th><h4><b>Date of Birth</b></h4></th>
            <th><h4><b>Membership Type</b></h4></th>
            <th><h4><b>Membership Duration</b></h4> (Months)</th>
        </tr>
    </thead>
    <tbody>

        
            <tr>

	@if (Model.DOB == null) {
        <td></td>
    }
    else
    {
        <td><h4>@Model.DOB.Date.ToShortDateString()</h4></td>
    }
                <td><h4>@Model.MemberShip.Name</h4></td>
                <td><h4>@Model.MemberShip.DurationMonths</h4> </td>    
    






            </tr>
       
    </tbody>
</table>